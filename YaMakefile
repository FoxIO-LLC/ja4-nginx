start:
	sudo ./nginx_local/sbin/nginx -g "daemon off;"
build:
	./auto/configure --with-debug --with-compat --add-module=./module --with-http_v3_module --with-http_ssl_module --prefix=$(pwd)/nginx_local

gen-certs:
	openssl req -x509 -nodes -days 365 -newkey rsa:2048 -keyout nginx_utils/conf/server.key -out nginx_utils/conf/server.crt -subj "/C=US/ST=State/L=City/O=Organization/OU=Department/CN=localhost"

convert-crt-to-pem:
	openssl x509 -in nginx_utils/conf/server.crt -out nginx_utils/conf/server.pem -outform PEM

connect-with-openssl-client:
	openssl s_client -connect localhost:443